<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="335dp"
    android:layout_height="321dp"
    tools:context=".SeniorAndJunior.class_matched_ok"
    android:layout_gravity="center"
    android:background="@drawable/round_shape_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/profile"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="center"
            android:src="@drawable/ic_account_circle_90"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_compare_arrows_31"/>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="center"
            android:src="@drawable/ic_account_circle_90"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/grade_gender"
        app:layout_constraintTop_toBottomOf="@id/profile">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학과: 컴퓨터공학과"
            android:textColor="@color/black"
            android:textSize="13dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학년: 상관없음"
            android:textColor="@color/black"
            android:textSize="13dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별: 여자"
            android:textColor="@color/black"
            android:textSize="13dp"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:text="수락"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@drawable/button_left"
            android:id="@+id/accept"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:text="거절"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@drawable/button_right"
            android:id="@+id/refuse"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="매칭을 수락하시겠습니까?"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@id/button"
        tools:ignore="TextSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>